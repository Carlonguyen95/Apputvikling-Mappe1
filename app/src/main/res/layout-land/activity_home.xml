<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/applogo1" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:text="@string/app_name"
        android:textColor="@color/apptext_color"
        android:textSize="33sp"
        android:textAlignment="center"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="20"/>

    <ImageButton
        android:id="@+id/gameStartBtn"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_toStartOf="@id/gameStatsBtn"
        android:layout_below="@+id/app_name"
        android:layout_marginRight="10dp"
        android:background="@drawable/landscape_home_button_shape"
        android:src="@drawable/playlogo1" />

    <ImageButton
        android:id="@+id/gameStatsBtn"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_below="@+id/app_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/landscape_home_button_shape"
        android:src="@drawable/statslogo" />

    <ImageButton
        android:id="@+id/gameSettingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_toEndOf="@id/gameStatsBtn"
        android:layout_below="@+id/app_name"
        android:layout_marginLeft="10dp"
        android:background="@drawable/landscape_home_button_shape"
        android:src="@drawable/settingslogo" />

</RelativeLayout>